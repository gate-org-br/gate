dialog {
	width: 100%;
	height: 100%;
	border-radius: 0;
}

@media only screen and (min-width: 640px)
{
	dialog{
		border-radius: 5px;
		width: calc(100% - 80px);
		height: calc(100% - 80px);
	}
}

section {
	align-items: stretch;
}

g-chart {
	width: 100%;
	height: 100%;
	flex-grow: 1;
	background-color: white;
}