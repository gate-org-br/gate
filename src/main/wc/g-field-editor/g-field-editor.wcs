* {
	font-size: 16px;
	box-sizing: border-box
}

:host(*) {
	display: grid;
	grid-template-columns: repeat(16, 1fr);
}

label {
	padding: 4px;
	display: flex;
	grid-column: span 16;
	flex-direction: column;
}

span {
	display: block;
	flex-basis: 38px;
}

input,
select {
	padding: 8px 4px 8px 4px;
}

input,
textarea,
select {
	width: 100%;
	height: 100%;
	border-radius:  3px;
	border: 1px solid #CCCCCC;
}

input:invalid,
select:invalid,
textarea:invalid
{
	box-shadow: inset 0 0 1px 1px rgba(255, 0, 0, 0.75);
}

input:focus,
select:focus,
textarea:focus
{
	outline: none;
	background-color: var(--hovered);
}

@media only screen and (min-width: 500px) {
	label[data-size="2"] {
		grid-column: span 4;
	}

	label[data-size="4"] {
		grid-column: span 8;
	}

	label[data-size="8"] {
		grid-column: span 8;
	}
}

@media only screen and (min-width: 1000px) {
	label[data-size="2"] {
		grid-column: span 2;
	}

	label[data-size="4"] {
		grid-column: span 4;
	}

	label[data-size="8"] {
		grid-column: span 8;
	}
}