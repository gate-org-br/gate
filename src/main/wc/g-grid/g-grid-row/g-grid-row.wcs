* {
	box-sizing: border-box;
}

:host(*)
{
	height: 38px;
	cursor: inherit;
	display: table-row;
}

:host(.even),
:host(:nth-child(even))
{
	background-color: var(--main1);
}

:host(.odd),
:host(:nth-child(odd))
{
	background-color: var(--main2);
}

:host(:hover){
	background-color: var(--hovered);
}