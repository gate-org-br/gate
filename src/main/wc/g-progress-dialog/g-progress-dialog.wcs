* {
	box-sizing: border-box
}

:host(*) {
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	z-index: 2;
	display: flex;
	position: fixed;
	align-items: center;
	justify-content: center;
}

main
{
	width: 800px;
	height: auto;
	display: grid;
	max-width: 80%;
	position: fixed;
	border-radius: 5px;
	place-items: stretch;
	place-content: stretch;
	grid-template-rows: 40px 1fr 40px;
	box-shadow: 3px 10px 5px 0px rgba(0,0,0,0.75);
	border: 4px solid var(--g-window-border-color);
}