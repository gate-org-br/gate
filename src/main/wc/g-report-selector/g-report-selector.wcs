:host(*) {
	gap: 8px;
	width: 100%;
	height: auto;
	display: flex;
	flex-wrap: wrap;
	align-items: center;
	justify-content: flex-start;
}

a {
	gap: 8px;
	flex-grow: 1;
	display: flex;
	height: 128px;
	cursor: pointer;
	font-size: 24px;
	min-width: 128px;
	border-radius: 3px;
	align-items: center;
	text-decoration: none;
	flex-direction: column;
	justify-content: center;
	background-color: white;
}

a:hover {
	background-color: var(--hovered);
}

g-icon
{
	font-size: 50px;
}
