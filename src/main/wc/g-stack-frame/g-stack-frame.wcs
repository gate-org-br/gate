* {
	margin: 0;
	padding: 0;
	border: none;
	box-sizing: border-box
}

:host(*) {
	width: 0;
	height: 0;
	max-width: unset;
}

:host(*) > dialog {
	width: 100%;
	height: 100%;
	display:  flex;
	overflow: auto;
	max-width: unset;
	max-height: unset;
	align-items: stretch;
	justify-content: center;
}

:host(*) > dialog > div
{
	padding: 8px;
}


:host(*) > dialog > iframe {
	flex-grow: 1;
	overflow:  hidden;
}