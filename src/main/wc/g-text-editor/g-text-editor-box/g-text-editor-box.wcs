:host(*){
	padding: 8px;
	display: flex;
	overflow: auto;
	height: fit-content;
	align-items: stretch;
	justify-content: center;
}

:host(:focus), :host(:hover)
{
}

:host(:hover)
{
	resize: vertical;
	border: 1px solid #EFEFEF;
	background-color: var(--hovered);
}

:host(:focus)
{
	outline: dotted;
}