* {
	box-sizing: border-box;
}

:host(*)
{
	gap: 8px;
	display: flex;
	align-items: stretch;
	flex-direction: column;
}

dialog {
	width: 100%;
	height: 100%;
	border-radius: 0;
}

@media only screen and (min-width: 640px)
{
	dialog{
		border-radius: 3px;
		width: calc(100% - 80px);
		height: calc(100% - 80px);
	}
}

dialog > section {
	padding: 8px;
	display: flex;
	align-items: stretch;
	flex-direction: column;
}