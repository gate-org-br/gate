<html>
	<body>
		<g-if condition='${not empty roles}'>
			<ul>
				<g-for each='${roles}' name='role'>
					<li>
						${@role.name}
						<g-if condition='${not empty @role.users}'>
							<ul>
								<g-for each='${@role.users}' name='user'>
									<li>
										${@user.name} (${@role.name})
									</li>	
								</g-for>
							</ul>
						</g-if>
					</li>	
				</g-for>
			</ul>
		</g-if>
	</body>
</html>
